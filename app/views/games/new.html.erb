<ul class="letters-container">
  <% @letters.each do |letter| %>
    <li class="letter"><%= letter.upcase %></li>
  <% end %>
</ul>

<h3 class="center-txt">Write the longest word with those letters</h3>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <% @letters.each do |letter| %>
    <%= hidden_field_tag("letters[]", letter) %>
  <% end %>
  <input type="text" id="word" name="word" required autocomplete="off" class="text-box block center-block">
  <input type="submit" value="Check!" class="submit-btn-block block center-block">
</form>
